{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with OpenSSL (g++)",
            "type": "shell",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "${file}",
                "-I", "C:/OpenSSL-Win64/include",
                "-L", "C:/OpenSSL-Win64/lib",
                "-lssl",
                "-lcrypto",
                "-lstdc++",
                "-Wno-deprecated-declarations",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
